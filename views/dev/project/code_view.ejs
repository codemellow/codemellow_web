
<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Meta, title, CSS, favicons, etc. -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>

    Codemellow

  </title>

  <!-- Bootstrap core CSS -->
  <link href="/library/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/library/bootstrap/docs/assets/css/justified-nav.css" rel="stylesheet">

  <!-- common css -->
  <link href="/stylesheets/common.css" rel="stylesheet">
  <!-- syntax css -->
  <link href="/stylesheets/syntax.css" rel="stylesheet">

  <link href="/stylesheets/dev/project/code_view.css" rel="stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700' rel='stylesheet' type='text/css'>

  </head>
  <body class="bs-docs-home" style='padding-top:100px'>

    <!-- fixed header-->
    <div id="header">
      <% include ../header.ejs %>
    </div>

    <!-- content -->
    <div> 
      <% include ./project_header %>
      <div class='container no_padding'>
        <div id='project_basic_info' class="row project_body_class" >
          <% include ./project_body_left %>
          <div id="project_body_center" class="col-modal-8">
            <div id="project_content_options_bar" class="row">
              <div class="col-sm-12">
                <div class="btn-group">
                  <button id="branch_controll_btn" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Branch : master  <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Branch : master  </a></li>
                  </ul>
                </div>
                <a class="btn btn-default"><i class="fa fa-share-alt"></i></a>
                <a class="btn btn-default"><i class="fa fa-share"></i></i></a>
                <a href="/<%=repository_name%>/edit/master/<%=file_path%>" class="btn btn-default"><i class="fa fa-pencil"></i></a>
                <a class="btn btn-default"><i class="fa fa-trash"></i></a>
                
              </div>
            </div>
            <div class="project_file_status_bar">
                <span class="file_path"></span>
                <span class="file_name"></span>
                <span class="pull-right" style="font-size:16px;color:darkgray">7,416kb</span>
            </div>
            <div class="project_file_code row">
              <div class="col-sm-12">
                <div class="" id="code_viewer">
                </div>
              </div>              
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- fixed footer-->
    <div id="footer">
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <script src="/library/jquery/jquery-2.1.0.min.js"></script>
    <script src="/library/bootstrap/js/bootstrap.min.js" ></script>
    <script src="/library/extension-bootstrap/js/star-rating.min.js"></script>
    <script src="/scripts/dev/project/code_view.js"></script>
    <script>

      projectHeaderController.setValue('repository_id', '<%=repository_id%>');
      projectHeaderController.setValue('repository_name', '<%=repository_name%>');
      codeViewController.setValue('file_path', '<%=file_path%>');
      codeViewController.setValue('repository_name', '<%=repository_name%>');

      projectHeaderController.init();
      codeViewController.init();
    </script>
  </body>
</html>
