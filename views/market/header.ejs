<div id='alert_modal' class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 id='alert_modal_title' class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
        <p id='alert_modal_message'>alert message</p>
      </div>
      <div class="modal-footer">
        <button id='alert_modal_ok_btn' type="button" class="btn btn-primary">Go to Login</button>
        <button id='alert_modal_no_btn' type="button" class="btn btn-default" data-dismiss="modal">Close</button>

      </div>
    </div><!-- /.modal-content -->
  
</div>
